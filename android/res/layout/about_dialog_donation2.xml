<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
>
<LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="fill_parent">
    <TextView android:text="@string/dlg_about_donation_inapp_purchase" 
            style="@style/TextAppearance.Small"
            android:maxLines="7" 
            android:layout_margin="4dip" 
            android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
<TableLayout    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="1|3">
    <TableRow>
        <ImageView 
            android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_margin="2dip"
            android:paddingLeft="12dip"
            android:src="@drawable/cr3_coin_iron" 
            android:layout_gravity="center_vertical|left"
            />
        <Button android:id="@+id/btn_about_donation_install_iron" 
                android:text="@null"
                android:layout_marginRight="8dip"
                android:layout_gravity="center_vertical|left"
                android:layout_margin="2dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
android:contentDescription="@string/dlg_about_donation_iron"/>
        />
        <ImageView 
            android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_margin="2dip"
            android:paddingLeft="12dip"
            android:src="@drawable/cr3_coin_bronze" 
            android:layout_gravity="center_vertical|left"
            />
        <Button android:id="@+id/btn_about_donation_install_bronze" 
                android:text="@null"
                android:layout_marginRight="8dip"
                android:layout_gravity="center_vertical|left"
                android:layout_margin="2dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
android:contentDescription="@string/dlg_about_donation_bronze"/>
        />
    </TableRow>
    <TableRow>
        <ImageView 
            android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_margin="2dip"
            android:paddingLeft="12dip"
            android:src="@drawable/cr3_coin_silver" 
            android:layout_gravity="center_vertical|left"
            />
        <Button android:id="@+id/btn_about_donation_install_silver" 
                android:text="@null"
                android:layout_marginRight="8dip"
                android:layout_gravity="center_vertical|left"
                android:layout_margin="2dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
android:contentDescription="@string/dlg_about_donation_silver"/>
        />
        <ImageView 
            android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_margin="2dip"
            android:paddingLeft="12dip"
            android:src="@drawable/cr3_coin_gold" 
            android:layout_gravity="center_vertical|left"
            />
        <Button android:id="@+id/btn_about_donation_install_gold" 
                android:text="@null"
                android:layout_marginRight="8dip"
                android:layout_gravity="center_vertical|left"
                android:layout_margin="2dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
android:contentDescription="@string/dlg_about_donation_gold"/>
        />
    </TableRow>
    <TableRow>
        <ImageView 
            android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_margin="2dip"
            android:paddingLeft="12dip"
            android:src="@drawable/cr3_coin_platinum" 
            android:layout_gravity="center_vertical|left"
            />
        <Button android:id="@+id/btn_about_donation_install_platinum" 
                android:text="@null"
                android:layout_marginRight="8dip"
                android:layout_gravity="center_vertical|left"
                android:layout_margin="2dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
android:contentDescription="@string/dlg_about_donation_platinum"/>
        />
        <ImageView 
            android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_margin="2dip"
            android:paddingLeft="12dip"
            android:src="@drawable/cr3_coin_vip" 
            android:layout_gravity="center_vertical|left"
            />
        <Button android:id="@+id/btn_about_donation_install_vip" 
                android:text="@null"
                android:layout_marginRight="8dip"
                android:layout_gravity="center_vertical|left"
                android:layout_margin="2dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
android:contentDescription="@string/dlg_about_donation_vip"/>
        />
    </TableRow>
    
</TableLayout>
<TextView android:text="@string/dlg_about_donation_total"
            android:id="@+id/btn_about_donation_total" 
            style="@style/TextAppearance.Medium"
            android:maxLines="2" 
            android:layout_margin="4dip" 
            android:paddingBottom="6dip" 
            android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
<TextView android:text="PayPal: coolreader.org@gmail.com" 
            style="@style/TextAppearance.Medium"
            android:maxLines="2" 
            android:layout_margin="4dip" 
            android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
</LinearLayout>
</ScrollView>
