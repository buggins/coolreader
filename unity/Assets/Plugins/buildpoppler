ANDROID_NDK=~/android-sdks/ndk/16.1.4479499/

# 64 bit ARM

(
  cd /home/shaun/vrcoolreader/VRCoolReader/poppler/build
  mkdir -p arm64-v8a

  rm -f CMakeCache.txt 

  cmake -DCMAKE_ANDROID_ARCH_ABI=arm64-v8a -DCMAKE_SYSTEM_NAME=Android -DJPEG_LIBRARY=../../android/app/.externalNativeBuild/cmake/debug/arm64-v8a/thirdparty_libs/libjpeg/libjpeg.a -DFREETYPE_LIBRARY=../../android/app/.externalNativeBuild/cmake/debug/arm64-v8a/thirdparty_libs/freetype/libfreetype.a -DCMAKE_CXX_FLAGS=-isystem\ /home/shaun/vrcoolreader/VRCoolReader/thirdparty/freetype/include\ -isystem\ /home/shaun/vrcoolreader/VRCoolReader/thirdparty/libjpeg .. -DTESTDATADIR=test -DCMAKE_DISABLE_FIND_PACKAGE_NSS3=TRUE -DCMAKE_DISABLE_FIND_PACKAGE_TIFF=TRUE -DENABLE_LIBOPENJPEG=none -DENABLE_CMS=none -DCMAKE_DISABLE_FIND_PACKAGE_Boost=TRUE -DCMAKE_PREFIX_PATH=/home/shaun/vrcoolreader/VRCoolReader/thirdparty/freetype -DENABLE_QT5=OFF -DCMAKE_DISABLE_FIND_PACKAGE_PNG=TRUE -DCMAKE_DISABLE_FIND_PACKAGE_CURL=TRUE

  make clean
  make poppler poppler-cpp
  cp libpoppler.a arm64-v8a
  cp cpp/libpoppler-cpp.a arm64-v8a
)

rm -f crtbegin_so.o
rm -f crtend_so.o
ln -sf /home/shaun/android-sdks/ndk-bundle/platforms/android-26/arch-arm64/usr/lib/crtbegin_so.o 
ln -sf /home/shaun/android-sdks/ndk-bundle/platforms/android-26/arch-arm64/usr/lib/crtend_so.o 

/home/shaun/android-sdks/ndk/16.1.4479499/toolchains/aarch64-linux-android-4.9/prebuilt/linux-x86_64/bin/aarch64-linux-android-g++ --sysroot=${CROSS_SYSROOT} -isystem $ANDROID_NDK/sysroot/usr/include/aarch64-linux-android -isystem /home/shaun/android-sdks/ndk/16.1.4479499/sources/cxx-stl/gnu-libstdc++/4.9/include -isystem /home/shaun/android-sdks/ndk/16.1.4479499/sources/cxx-stl/gnu-libstdc++/4.9/libs/arm64-v8a/include -isystem /home/shaun/android-sdks/ndk/16.1.4479499/sources/cxx-stl/gnu-libstdc++/4.9/include/backward -isystem /home/shaun/android-sdks/ndk/16.1.4479499/sysroot/usr/include -isystem /home/shaun/android-sdks/ndk/16.1.4479499/sysroot/usr/include/aarch64-linux-android -std=c++14 -DANDROID -fPIC popplerInterface.c -I../../../poppler/cpp -oAndroid/libs/arm64-v8a/libPopplerInterface.so -shared -Wl,--whole-archive -I../../../poppler/cpp ../../../poppler/build/arm64-v8a/libpoppler-cpp.a ../../../poppler/build/arm64-v8a/libpoppler.a ../../../android/app/.externalNativeBuild/cmake/debug/arm64-v8a/thirdparty_libs/libjpeg/libjpeg.a -Wl,--no-whole-archive -L/home/shaun/android-sdks/ndk/16.1.4479499/platforms/android-26/arch-arm64/usr/lib/

rm -f crtbegin_so.o
rm -f crtend_so.o


